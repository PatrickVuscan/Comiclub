{
  "name": "comiclub",
  "version": "1.0.0",
  "private": true,
  "description": "Comiclub, a CSC309 project, Fall 2021",
  "main": "server.js",
  "scripts": {
    "setup": "npm install && cd frontend && npm install && cd ..",
    "build-run": "cd frontend && npm run build && cd .. && node server.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev-all": "concurrently --names \"Frontend,Backend,MongoDB\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"cd frontend && npm run start\" \"npm run dev\" \"mongod --dbpath mongo-data\" ",
    "heroku-postbuild": "cd frontend && npm install && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.27.1",
    "connect-mongo": "^4.4.0",
    "connect-multiparty": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "mongodb": "^3.6.5",
    "mongoose": "^5.12.1",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.4.1"
  }
}
